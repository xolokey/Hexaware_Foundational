@model IEnumerable<BookStoreApp.Models.Book>;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Book Index";

}
<div class="text-center">
    <h2>......List Of Avilable Books.....</h2>
    <table class="table table-striped">
        <thead>
            
            <tr>
                <th>BookID</th>
                <th>Book Name</th>
                <th> Type</th>
                <th>Price</th>
                <th>MoreInfo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.BookID</td>
                    <td>@book.BookName</td>
                    <td>@book.BookType</td>
                    <td>@book.BookPrice</td>
                    <td>@Html.ActionLink("Book MoreInfo","MoreInfo","Books",new{BookID=book.BookID},null)</td>
                </tr>
            }
        </tbody>

    </table>
</div>
@model AssetManagementMVC.Models.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container text-center">
    <h2 class="mt-3 mb-4">----Admin Dashboard----</h2>
    <div class="row g-4">

        <div class="col-md-4">
            <div class="card border-primary shadow">
                <div class="card-body">
                    <h5 class="card-title text-primary">Total Users</h5>
                    <h2>@Model.TotalUsers</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-success shadow">
                <div class="card-body">
                    <h5 class="card-title text-success">Total Assets</h5>
                    <h2>@Model.TotalAssets</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-warning shadow">
                <div class="card-body">
                    <h5 class="card-title text-warning">Allocated Assets</h5>
                    <h2>@Model.AllocatedAssets</h2>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-danger shadow">
                <div class="card-body">
                    <h5 class="card-title text-danger">Active Service Requests</h5>
                    <h2>@Model.ActiveRequests</h2>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-secondary shadow">
                <div class="card-body">
                    <h5 class="card-title text-secondary">Pending Audits</h5>
                    <h2>@Model.PendingAudits</h2>
                </div>
            </div>
        </div>

    </div>
</div>
